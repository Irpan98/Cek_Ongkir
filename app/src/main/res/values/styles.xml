<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="SearchViewStyle" parent="paddingHorizontalParent">
<!--        <item name="android:padding">24dp</item>-->
        <item name="android:elevation">40dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>

        <item name="android:paddingBottom">12dp</item>


        <item name="mt_placeholderColor">@color/colorTextPrimary</item>

        <item name="mt_searchBarColor">@color/colorSecondary</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">80dp</item>



    </style>


    <style name="textTitleBold" parent="paddingHorizontalParent">

        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    android:paddingHorizontal="14dp"-->


    <style name="paddingHorizontalParent">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>


</resources>